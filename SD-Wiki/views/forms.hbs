<div class="container contact-form" action="/{{pageName}}/save" method="POST">
  <h3 id="contact-form-heading">Enter some text for a wiki entry</h3>
  <form action="/submit" method="POST">
    <div class="form-group">
      <label for="name">Name</label>
      <input
        type="name"
        class="form-control"
        name="name">
    </div>
    <div class="form-group">
      <label for="message">Message</label>
      <textarea class="form-control" name="message" row="2" placeholder="Hey there"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
</div>
